{{> header}}

<!-- Game Server Status Warning -->
{{#unless hasGameServerImage}}
<div class="bg-red-900 border-2 border-red-600 rounded-xl shadow-lg p-6 mb-8">
  <div class="flex items-center gap-4">
    <div class="flex-shrink-0">
      <svg class="w-12 h-12 text-red-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="text-xl font-bold text-red-200 mb-2">⚠️ Game Server Not Available</h3>
      <p class="text-red-300 text-lg leading-relaxed">
        <strong>You cannot create offline matches without a game server image.</strong><br>
        Please, connect to the itnernet and start a match to pull the game server image.
      </p>
    </div>
  </div>
</div>
{{/unless}}

{{#if matches}}
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4 pb-2 border-b-2 border-gray-600">
      <h2 class="text-2xl font-semibold text-gray-300">Matches</h2>
      <a 
        href="/matches" 
        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 {{#unless hasGameServerImage}}opacity-50 cursor-not-allowed pointer-events-none{{/unless}}"
        {{#unless hasGameServerImage}}onclick="return false;"{{/unless}}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        {{#if hasGameServerImage}}Create New Match{{else}}Game Server Not Available{{/if}}
      </a>
    </div>
    <ul class="space-y-4">
      {{#each matches}}
        {{> match-info this}}
      {{/each}}
    </ul>
  </div>
{{else}}
  <div class="mb-8">
    <div class="flex justify-between items-center mb-4 pb-2 border-b-2 border-gray-600">
      <h2 class="text-2xl font-semibold text-gray-300">Matches</h2>
      <a 
        href="/matches" 
        class="inline-flex items-center gap-2 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 {{#unless hasGameServerImage}}opacity-50 cursor-not-allowed pointer-events-none{{/unless}}"
        {{#unless hasGameServerImage}}onclick="return false;"{{/unless}}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        {{#if hasGameServerImage}}Create New Match{{else}}Game Server Not Available{{/if}}
      </a>
    </div>
    <div class="text-gray-400 italic">No matches found.</div>
  </div>
{{/if}}

