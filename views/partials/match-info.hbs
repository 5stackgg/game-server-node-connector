<li class="bg-gray-700 rounded-lg shadow-lg p-6 border border-gray-600 hover:shadow-xl transition-shadow duration-200">
    <!-- Match Header -->
    <div class="flex justify-between items-start mb-4">
        <div>
            <div class="text-gray-100 mb-1">
                <span class="font-semibold text-gray-300">Match ID:</span> 
                <span class="font-mono text-indigo-400 text-sm">{{this.id}}</span>
            </div>
            <div class="text-gray-100">
                <span class="font-semibold text-gray-300">Teams:</span> 
                <span class="text-green-400 font-medium">{{this.lineup_1.name}}</span> 
                <span class="text-gray-400 mx-2">vs</span> 
                <span class="text-red-400 font-medium">{{this.lineup_2.name}}</span>
            </div>
        </div>
        <div class="flex gap-2">
            <a 
                href="/matches/{{this.id}}" 
                class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center gap-2"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Match
            </a>
            <form method="POST" action="/matches/{{this.id}}/delete">
                <button 
                    type="submit" 
                    class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center gap-2"
                    onclick="return confirm('Are you sure you want to delete this match? This action cannot be undone.')"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete Match
                </button>
            </form>
        </div>
    </div>

    <!-- Server Information -->
    {{#if this.server_port}}
    <div class="bg-gray-800 p-4 rounded-lg mb-4">
        <h4 class="text-gray-300 font-semibold mb-3 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
            </svg>
            Server Information
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-center gap-2">
                <span class="text-gray-400">LAN IP:</span>
                <span class="text-green-400 font-mono">{{@root.lanIP}}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Server Port:</span>
                <span class="text-blue-400 font-mono">{{this.server_port}}</span>
            </div>
            {{#if this.tv_port}}
            <div class="flex items-center gap-2">
                <span class="text-gray-400">TV Port:</span>
                <span class="text-cyan-400 font-mono">{{this.tv_port}}</span>
            </div>
            {{/if}}
        </div>
    </div>
    {{/if}}

    <!-- RCON Console -->
    {{#if this.server_port}}
    {{> rcon this}}
    {{/if}}

    <!-- Teams Information -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <!-- Team 1 -->
        <div class="bg-gray-800 p-4 rounded-lg">
            <div class="flex items-center gap-2 mb-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <h4 class="text-green-400 font-semibold">{{this.lineup_1.name}}</h4>
            </div>
            <div class="space-y-1">
                <div class="text-xs text-gray-400">Players: {{this.lineup_1.lineup_players.length}}</div>
                {{#if this.lineup_1.coach_steam_id}}
                <div class="text-xs text-gray-400">Coach: {{this.lineup_1.coach_steam_id}}</div>
                {{/if}}
                {{#each this.lineup_1.lineup_players}}
                    <div class="text-xs text-gray-300">
                        {{#if this.captain}}
                        <span class="text-yellow-400 font-medium">[C]</span>
                        {{/if}}
                        {{#if this.name}}
                        <span class="text-gray-100">{{this.name}}</span>
                        {{else}}
                        <span class="font-mono text-blue-300">{{this.steam_id}}</span>
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        </div>

        <!-- Team 2 -->
        <div class="bg-gray-800 p-4 rounded-lg">
            <div class="flex items-center gap-2 mb-3">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <h4 class="text-red-400 font-semibold">{{this.lineup_2.name}}</h4>
            </div>
            <div class="space-y-1">
                <div class="text-xs text-gray-400">Players: {{this.lineup_2.lineup_players.length}}</div>
                {{#if this.lineup_2.coach_steam_id}}
                <div class="text-xs text-gray-400">Coach: {{this.lineup_2.coach_steam_id}}</div>
                {{/if}}
                {{#each this.lineup_2.lineup_players}}
                    <div class="text-xs text-gray-300">
                        {{#if this.captain}}
                        <span class="text-yellow-400 font-medium">[C]</span>
                        {{/if}}
                        {{#if this.name}}
                        <span class="text-gray-100">{{this.name}}</span>
                        {{else}}
                        <span class="font-mono text-blue-300">{{this.steam_id}}</span>
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>

    <!-- Maps Information -->
    <div class="bg-gray-800 p-4 rounded-lg mb-4">
        <h4 class="text-gray-300 font-semibold mb-3 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
            Maps ({{this.match_maps.length}})
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
            {{#each this.match_maps}}
            <div class="bg-gray-700 p-2 rounded text-xs">
                <div class="text-gray-300 font-medium">{{this.map.name}}</div>
                {{#if this.map.workshop_map_id}}
                <div class="text-gray-500">Workshop: {{this.map.workshop_map_id}}</div>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Match Options -->
    <div class="bg-gray-800 p-4 rounded-lg">
        <h4 class="text-gray-300 font-semibold mb-3">Match Options</h4>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 text-xs">
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Match Type:</span>
                <span class="text-gray-300">{{this.options.type}}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Best Of:</span>
                <span class="text-gray-300">{{this.options.best_of}}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Max Rounds:</span>
                <span class="text-gray-300">{{this.options.mr}}</span>
            </div>
            <div class="flex items-center gap-2">
                {{#if this.options.overtime}}
                <span class="text-green-400">✓</span>
                {{else}}
                <span class="text-red-400">✗</span>
                {{/if}}
                <span class="text-gray-400">Overtime</span>
            </div>
            <div class="flex items-center gap-2">
                {{#if this.options.knife_round}}
                <span class="text-green-400">✓</span>
                {{else}}
                <span class="text-red-400">✗</span>
                {{/if}}
                <span class="text-gray-400">Knife Round</span>
            </div>
            <div class="flex items-center gap-2">
                {{#if this.options.coaches}}
                <span class="text-green-400">✓</span>
                {{else}}
                <span class="text-red-400">✗</span>
                {{/if}}
                <span class="text-gray-400">Coaches</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">TV Delay:</span>
                <span class="text-gray-300">{{this.options.tv_delay}}s</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Ready:</span>
                <span class="text-gray-300">{{this.options.ready_setting}}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Timeout:</span>
                <span class="text-gray-300">{{this.options.timeout_setting}}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">Substitutes:</span>
                <span class="text-gray-300">{{this.options.number_of_substitutes}}</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="text-gray-400">LAN:</span>
                {{#if this.is_lan}}
                <span class="text-green-400">Yes</span>
                {{else}}
                <span class="text-red-400">No</span>
                {{/if}}
            </div>
        </div>
        {{#if this.options.cfg_override}}
        <div class="mt-3 pt-3 border-t border-gray-600">
            <div class="text-xs text-gray-400 mb-1">CFG Override:</div>
            <div class="text-xs text-gray-300 font-mono bg-gray-900 p-2 rounded">{{this.options.cfg_override}}</div>
        </div>
        {{/if}}
    </div>
</li>